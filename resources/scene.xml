<scene>
    <!-- Since we're using glTF models, we're using their coordinate system:
         right handed, Y is up. So +X is right, +Z is towards the camera. -->
    <assets path="/tg/triblend.xml" />
    <entity>
        <geometry mesh="triangle">
            <material name="morph-basic" />
        </geometry>
        <rigidbody physics="off">
            <transform translation="0 0 0" />
        </rigidbody>
    </entity>
    <entity>
        <camera />
        <rigidbody physics="off">
            <transform translation="0 0 5" />
        </rigidbody>
    </entity>
</scene>
