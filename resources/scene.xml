<scene>
    <!-- Since we're using glTF models, we're using their coordinate system:
         right handed, Y is up. So +X is right, +Z is towards the camera. -->
    <assets path="/tg/duck.xml" />
    <entity>
        <geometry mesh="Duck">
            <material name="Duck" />
        </geometry>
        <rigidbody physics="off">
            <transform translation="0 0 0" />
        </rigidbody>
    </entity>
    <entity>
        <camera />
        <rigidbody physics="off">
            <transform translation="0 250 -400" orientation="0 0.983954 0.178425 0" />
        </rigidbody>
    </entity>
</scene>
