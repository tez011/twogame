<scene>
    <!-- Since we're using glTF models, we're using their coordinate system:
         right handed, Y is up. So +X is right, +Z is towards the camera. -->
    <assets path="/tg/RiggedSimple.xml" />
    <entity>
        <geometry mesh="tubeman">
            <material name="tubeman-basic" />
        </geometry>
        <rigidbody physics="off">
            <transform translation="0 0 0" />
        </rigidbody>
        <animator initial="tubing" />
    </entity>
    <entity>
        <camera />
        <rigidbody physics="off">
            <transform translation="-15 0 0" orientation="0.5 -0.5 -0.5 0.5"/>
        </rigidbody>
    </entity>
</scene>
