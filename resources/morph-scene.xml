<scene>
    <!-- Since we're using glTF models, we're using their coordinate system:
         right handed, Y is up. So +X is right, +Z is towards the camera. -->
    <assets path="/tg/morph.xml" />
    <entity>
        <geometry mesh="Cube">
            <material>Base</material>
            <material>TestMaterial</material>
        </geometry>
        <rigidbody physics="off">
            <transform translation="0 0 0" />
        </rigidbody>
        <animator initial="TheWave" />
    </entity>
    <entity>
        <camera />
        <rigidbody physics="off">
            <transform translation="0.000000 3.000000 4.000000" orientation="-0.229753 -0.000000 -0.000000 0.973249" />
        </rigidbody>
    </entity>
</scene>
